{% extends 'base.html.twig' %}

{% block title %}liste velos{% endblock %}

{% block body %}
<!--==================== PRODUITS ====================-->
<section class="products section container" id="list_products">
    <h2 class="section_title">
        Tous nos Vélos !!
    </h2>
    {{ include('bike/_search_data.html.twig', {'button_label': 'Cherchez'}) }}

    <div class="list_container">
        <div class="swiper list_products-swiper">
            <div class="swiper-wrapper">
                {% for bike in bikes %}
                <article class="list_products_card swiper-slide">
                    <img src="{{ asset('img/'~ bike.image.frame) }}" alt="{{ bike.nameBike }}" class="new_img list_products_img">

                    <h3 class="new_title">{{ bike.nameBike }}</h3>
                    <span class="new_price">{{ bike.priceBike }} €</span>

                    <button class="products_button">
                        <i class='bx bx-shopping-bag'></i>
                    </button>

                </article>
                {% endfor %}
            </div>
            <div class="list-pagination swiper-pagination"></div>
        </div>
    </div>
</section>
{% endblock %}
