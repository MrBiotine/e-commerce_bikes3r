{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<section class="myCart container section">
  {# <!--==================== myCART ====================--> #}
  <div class="myCart">
    
    <h2 class="cart_title-center">Mon panier</h2>

    <div class="cart_container">
        {% for product in data %}          
                  
        
        <article class="cart_card">
            <div class="cart_box">
                <img src="{{ asset('img/'~ product.bike.image.frame) }}" alt="" class="cart_img">
            </div>

            <div class="cart_details">
                <h3 class="cart_title">{{ product.bike.nameBike }}</h3>
                <span class="cart_price">{{ product.bike.priceBike }} €</span>

                <div class="cart_amount">
                    <div class="cart_amount-content">
                        <a href="{{ path('remove_product', {'id': product.bike.id }) }}" class="cart_amount-box"><i class='bx bx-minus' ></i></a>                        
                        <span class="cart_amount-number">{{ product.quantity }}</span>
                        <a href="{{ path('add_product', {'id': product.bike.id }) }}" class="cart_amount-box"> <i class='bx bx-plus' ></i></a>
                    </div>

                    <a href="{{ path('delete_product', {'id': product.bike.id }) }}"><i class='bx bx-trash-alt cart_amount-trash' ></i></a>
                </div>
            </div>
            <div class="cart_subTotal">sous-total : <span class="cart_price">{{ product.quantity * product.bike.priceBike }} €</span></div>
        </article>
        
        
        {% else %}
        <div class="cart_btn">Votre panier est vide - remplissez le !</div>
        {% endfor %}
        <div class="cart_prices">
        {% if data | length > 0 and data | length < 2 and totalQuantity < 2 %} 
            <span class="cart_prices-item">Un article pour un produit </span>
        {% elseif  data | length < 2 and totalQuantity > 1 %}
            <span class="cart_prices-item">Un article pour {{ totalQuantity }} produits au total </span>
        {% elseif data | length > 1 and totalQuantity > 1 %}            
            <span class="cart_prices-item">{{ data | length }} articles pour {{ totalQuantity }} produits au total </span>
        
            <span class="cart_prices-total">Prix total : {{ total }}€</span>
         {% endif %}   
        </div>
        {% if data | length > 0 %}
            <a class="button cart_btn cart_link" href="{{ path('empty_cart') }}">Vider le panier</a>
            <a href="{{ path('app_orders_add') }}" class="btn btn-outline-secondary mt-1">Validez le panier</a>
        {% endif %}
        
        
        
    </div>

    
</div>  

</section>
{% endblock %}
